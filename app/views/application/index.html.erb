<%# This is the homepage %>
<%= render "application/header" %>

<% if logged_in? %>
<h2>Recent Posts</h2>

<ul>
  <% Post.all.order(created_at: :desc).each do |post| %>
    <li>
      <strong><%= post.title %></strong>:<br> 
      <%= post.body %><br>
      Posted by <%= post.user.name %> - <%= post.created_at.strftime("%b %d, %Y") %>
      <% if post.updated_at > post.created_at %>
        <br>
        <em>Updated on <%= post.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%B %d, %Y at %I:%M %p") %></em>
      <% end %>
    </li>
  <% end %>
</ul>
<% end %>